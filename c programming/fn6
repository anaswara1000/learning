//passing string as an arg
#include<stdio.h>
void modify(char[],char[]);

void main(){
    char str1[]="anaswara";
    char str2[]="krishna";
    modify(str1,str2);
}

void modify(char str1[],char str2[]){
    int i,length=0;
    for(i=0;str1[i]!='\0';i++){
    length=length+1;}
    //str2[1]='k';
    printf("length of 1st string is :%d\n",length);
    printf("both strings are:%s%s",str1,str2);
}
